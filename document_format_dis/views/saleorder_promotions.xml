<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <data>

        <record id="A4_sale" model="report.paperformat">
            <field name="name">A4 Sale</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="margin_top">40.00</field>
            <field name="margin_bottom">28.00</field>
            <field name="margin_right">7.00</field>
            <field name="margin_left">7.00</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="header_line">False</field>
            <field name="header_spacing">38</field>
            <field name="dpi">90</field>
        </record>

         <record id="document_format_dis.report_saleorder_promotions" model="ir.actions.report">
            <field name="paperformat_id" ref="document_format_dis.A4_sale"/>
        </record>


        <report id="report_saleorder_promotions"
                string="Presupuesto / Pedido"
                model="sale.order"
                report_type="qweb-pdf"
                name="document_format_dis.report_saleorder_promotions"
                file="sale.report_saleorder_promotions"
                print_report_name="(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)"
        />

        <template id="report_saleorder_promotions">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="document_format_dis.report_saleorder_document_without_promotions" t-lang="doc.partner_id.lang"/>
                    <t t-call="document_format_dis.report_saleorder_document_promotions" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>