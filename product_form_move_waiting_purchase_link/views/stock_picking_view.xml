<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_product_template_sale_list" model="ir.actions.act_window">
        <field name="name">Stock Picking</field>
        <field name="res_model">stock.move</field>
        <field name="context">{}</field>
        <field name="domain">[('state', 'not in', ['done', 'cancel']), ('picking_type_id.code','=','outgoing')]</field>
    </record>

   <record model="ir.ui.view" id="product_form_move_waiting_purchase_link.purchase_picking_view">
        <field name="name">puchase_picking_view</field>
           <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button"
                        name="%(product_form_move_waiting_purchase_link.action_product_template_sale_list)d"
                        type="action"
                        icon="fa-truck">
                   <field string="Delivery"
                           name="move_product_qty"
                           widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
